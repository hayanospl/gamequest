<h3>ユーザープロフィール</h3>
 <% f = @following %>
 <% if f.image? %>
    <%= image_tag f.image.url %>
  <% else %>
    <%= image_tag "/assets/default.jpg", :size => '200x100' %>
  <% end %>
<h5>ユーザー名: <%= f.name %></h5>
<h5>プロフィール: <%= f.profile %></h5>

<h5>フォロワーの投稿</h5>
<table class="table">
  <thead>
    <tr>
      <th scope="col">既読</th>
      <th scope="col">NO.</th>
      <th scope="col">ユーザー</th>
      <th scope="col">タイトル</th>
      <th scope="col">本文</th>
      <th scope="col">返信数</th>
      <th scope="col">いいね数</th>
      <th scope="col">投稿詳細</th>
    </tr>
  </thead>
  <tbody>
      <% @following_posts.each do |post| %>
        <tr>
          <%= render 'shared/alreadyread', post: post %>
          <th scope="row"><%= post.id %></th>
          <td scope="row"><%= post.user.name %></td>
          <td scope="row"><%= post.title %></td>
          <td scope="row"><%= post.content %></td>
          <td scope="row"><%= post.comments.count %></td>
          <td scope="row"><%= post.likes.count %></td>
          <td scope="row"><%= link_to "詳細", post_path(post.id) %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @following_posts if @following_posts.present?-%>
