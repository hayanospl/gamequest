<% if c.comment_liked_by?(current_user) %>
  <%= link_to post_comment_comment_like_path(post_id: post.id, comment_id: c.id, id: c.id ), remote: true, method: :delete do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to post_comment_comment_likes_path(post_id: post.id, comment_id: c.id), remote: true, method: :post do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
