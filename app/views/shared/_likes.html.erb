<% if @post.liked_by?(current_user) %>
  <p><span >いいね解除: </span>♡<%= link_to @post.likes.count, post_like_path(post_id: @post.id, id: @post.likes[0].id) , method: :delete, remote: true, class: "text-danger" %></p>
<% else %>
  <p><span>いいね: </span>♡<%= link_to @post.likes.count, post_likes_path(@post.id), method: :post, remote: true, class: "text-secondary"  %></p>
<% end %>